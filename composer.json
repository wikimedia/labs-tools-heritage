{
    "config": {
        "secure-http": false
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "cweiske/php-sqllint": "^0.1.3",
        "jakub-onderka/php-parallel-lint": "0.9.2",
        "mediawiki/mediawiki-codesniffer": "0.7.2"
    },
    "scripts": {
        "fix": "phpcbf",
        "test": [
            "parallel-lint . --exclude vendor",
            "php-sqllint $(find -not -path './vendor/*' -name *.sql)",
            "phpcs -p -s",
            "phpunit api/tests"
        ]
    },
    "require": {
        "Krinkle/intuition": "^0.2.3"
    }
}
